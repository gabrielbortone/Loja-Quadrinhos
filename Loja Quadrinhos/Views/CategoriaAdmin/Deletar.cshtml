@model Loja_Quadrinhos.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="titulo">Deletar categoria</h1>
</div>

<h3>Você tem certeza que deseja deletar esse registro?</h3>
<div class="texto>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-padrao" /> |
        <a asp-action="Listar">Voltar para a lista</a>
    </form>
</div>
