@model IEnumerable<Loja_Quadrinhos.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="titulo">Listando produtos</h1>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 quadrinho">
                <div class="imagem-miniatura">
                    <img src=@Html.DisplayFor(modelItem => item.ImagemUrl) />
                </div>
                <div>
                    <p class="subtitulo">@Html.DisplayFor(modelItem => item.Titulo)</p>
                    <p class="preco">@Html.DisplayFor(modelItem => item.Preco)</p>
                </div>
            </div>
        }
    </div>
</div>
